<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:background="@drawable/selector_bubble_voice"
                android:layout_width="match_parent"
                android:paddingLeft="@dimen/dp_8"
                android:paddingRight="@dimen/dp_8"
                android:layout_height="@dimen/dp_36">

    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:id="@+id/duration_text"
              android:textColor="#78ac61"
              android:layout_alignParentLeft="true"
              android:layout_centerVertical="true"
              android:text="12''"/>

    <ImageView android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:id="@+id/stopped_view"
               android:layout_centerVertical="true"
               android:layout_alignParentRight="true"
               android:src="@drawable/icon_volume_3"/>

    <ProgressBar
            android:id="@+id/preparing_view"
            style="@style/anim36Style"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_width="18dp"
            android:layout_height="18dp"/>

    <ImageView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_centerVertical="true"
              android:layout_alignParentRight="true"
              android:src="@anim/volume_play_gif"
              android:id="@+id/playing_view"/>
</RelativeLayout>
