<?xml version="1.0" encoding="utf-8"?>
<com.link.bianmi.widget.NotifyingScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="false"
    android:fillViewport="true"
    android:fitsSystemWindows="true" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#ffff" >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:src="@drawable/about_buaa" />

        <TextView
            android:id="@+id/about_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#f111"
            android:textSize="16sp"
            android:padding="8dp"
            android:lineSpacingExtra="2dp"
            android:autoLink="email"
            android:text="@string/add_action_title" />
        <View 
            android:layout_width="match_parent"
            android:layout_height="16dp"/>

    </LinearLayout>

</com.link.bianmi.widget.NotifyingScrollView>