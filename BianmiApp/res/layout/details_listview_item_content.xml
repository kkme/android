<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/content_group"
    android:layout_width="match_parent"
    android:layout_height="320dp"
    android:layout_alignParentTop="true" >

    <!-- 来自哪里 -->

    <TextView
        android:id="@+id/wherefrom_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:singleLine="true"
        android:text="朋友的朋友"
        android:textStyle="bold" />
    <!-- 图片 -->

    <ImageView
        android:id="@+id/image_imageview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop" />

    <!-- 文字内容 -->

    <TextView
        android:id="@+id/content_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:textSize="16sp" />
    <!-- 语音按钮 -->

    <com.link.bianmi.widget.AudioButton
        android:id="@+id/audio_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <!-- 赞数、评论数 -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="right"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/liked_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_card_like"
            android:gravity="center_vertical"
            android:text="10" />

        <TextView
            android:id="@+id/comment_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_card_comment"
            android:gravity="center_vertical"
            android:text="1.3k" />
    </LinearLayout>

</RelativeLayout>