<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/mxx_dialog_frame"
    android:minWidth="280dp"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/mxx_dialog_confirm_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:gravity="left|center_vertical"
        android:text="标题"
        android:textColor="@color/mxx_item_theme_color"
        android:textSize="20sp"
        android:textStyle="normal" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/mxx_item_theme_color" />

    <TextView
        android:id="@+id/mxx_dialog_confirm_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:gravity="left|center_vertical"
        android:text="确认对话框的内容确认对话框的内容确认对话框的内容"
        android:textColor="#f000"
        android:textSize="16sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/mxx_item_divider_color" />

    <LinearLayout
        android:id="@+id/mxx_dialog_confirm_btn_layout"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:gravity="center"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/mxx_dialog_confirm_btn2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:background="@drawable/mxx_view_bg_default"
            android:gravity="center"
            android:text="否"
            android:textColor="#f222"
            android:textSize="16.0dip" />

        <View
            android:id="@+id/mxx_dialog_btns_divider"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/mxx_item_divider_color" />

        <TextView
            android:id="@+id/mxx_dialog_confirm_btn1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:background="@drawable/mxx_view_bg_default"
            android:gravity="center"
            android:text="是"
            android:textColor="#f222"
            android:textSize="16.0dip" />
    </LinearLayout>

</LinearLayout>