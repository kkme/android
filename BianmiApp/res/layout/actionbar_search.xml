<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/window_background"
    android:orientation="vertical" >

    <com.link.bianmi.unit.country.ClearEditText
        android:id="@+id/filter_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/page_padding_left"
        android:layout_marginRight="@dimen/page_padding_right"
        android:background="@drawable/selector_input"
        android:drawableLeft="@drawable/search_bar_icon_normal"
        android:hint="@string/please_input_keyword"
        android:padding="@dimen/dp_10"
        android:singleLine="true"
        android:textSize="@dimen/dp_15" />

</LinearLayout>