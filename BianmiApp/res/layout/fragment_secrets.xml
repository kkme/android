<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/clewhead_bg" >

    <com.link.bianmi.widget.RListView
        android:id="@+id/rlistview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/mxx_listview_bg"
        android:cacheColorHint="#00ffffff"
        android:clipToPadding="false"
        android:divider="@android:color/transparent"
        android:dividerHeight="8dp"
        android:fitsSystemWindows="true"
        android:listSelector="@android:color/transparent" />

    <RelativeLayout
        android:id="@+id/banner_group"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_42"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:background="@color/mxx_item_theme_color_alpha" >
    </RelativeLayout>

</RelativeLayout>