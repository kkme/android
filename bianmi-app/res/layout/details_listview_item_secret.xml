<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/content_group"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/holo_blue_light" >

    <!-- 来自哪里 -->

    <TextView
        android:id="@+id/wherefrom_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:singleLine="true"
        android:text="朋友的朋友"
        android:textStyle="bold" />
    <!-- 图片 -->

    <ImageView
        android:id="@+id/picture_imageview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:contentDescription="@null"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_launcher" />

    <!-- 文字内容 -->

    <TextView
        android:id="@+id/content_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:paddingBottom="@dimen/dp_48"
        android:paddingLeft="@dimen/dp_15"
        android:paddingRight="@dimen/dp_15"
        android:textColor="@android:color/white"
        android:textSize="@dimen/sp_20" />
    <!-- 语音按钮 -->

    <com.link.bianmi.widget.AudioButton
        android:id="@+id/audio_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <!-- 赞数、评论数 -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_48"
        android:layout_alignParentBottom="true"
        android:gravity="right"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/liked_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_card_like"
            android:gravity="center_vertical"
            android:text="10" />

        <TextView
            android:id="@+id/comment_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_card_comment"
            android:gravity="center_vertical"
            android:text="1.3k" />
    </LinearLayout>

</RelativeLayout>