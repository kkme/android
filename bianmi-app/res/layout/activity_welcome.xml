<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/about_layout_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_welcome" >

    <!-- 滑动页面 -->

    <RelativeLayout
        android:id="@+id/viewpager_group"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/signinup_btn_group"
        android:layout_marginTop="@dimen/dp_16"
        android:clipChildren="false"
        android:gravity="center"
        android:layerType="software" >

        <android.support.v4.view.ViewPager
            android:id="@+id/view_pager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:clipChildren="false" />
    </RelativeLayout>

    <!-- 登录、注册、游客按钮 -->

    <LinearLayout
        android:id="@+id/signinup_btn_group"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_80"
        android:layout_alignParentBottom="true"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dp_16"
        android:paddingRight="@dimen/dp_16"
        android:weightSum="2" >

        <Button
            android:id="@+id/signup_button"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_48"
            android:layout_marginRight="@dimen/dp_8"
            android:layout_weight="1"
            android:background="@drawable/selector_btn_red"
            android:text="@string/signup"
            android:visibility="gone" />

        <Button
            android:id="@+id/signin_button"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_48"
            android:layout_marginLeft="@dimen/dp_8"
            android:layout_weight="1"
            android:background="@drawable/selector_btn_green"
            android:text="@string/signin"
            android:visibility="gone" />

        <Button
            android:id="@+id/guest_button"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_48"
            android:layout_weight="2"
            android:background="@drawable/selector_btn_blue"
            android:text="@string/welcome_guest"
            android:visibility="gone" />

        <Button
            android:id="@+id/tip_button"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_48"
            android:layout_weight="2"
            android:background="@android:color/transparent"
            android:text="@string/welcome_tip_next"
            android:textColor="@color/solid_white"
            android:textSize="@dimen/sp_18" />
    </LinearLayout>

</RelativeLayout>