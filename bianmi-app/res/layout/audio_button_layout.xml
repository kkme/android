<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_36"
    android:background="@drawable/selector_bubble_voice"
    android:paddingLeft="@dimen/dp_8"
    android:paddingRight="@dimen/dp_8" >

    <TextView
        android:id="@+id/duration_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:text="12&apos;&apos;"
        android:textColor="#78ac61" />

    <ImageView
        android:id="@+id/stopped_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@drawable/icon_volume_3" />

    <ProgressBar
        android:id="@+id/preparing_view"
        style="@android:style/Widget.ProgressBar.Large.Inverse"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true" />

    <ImageView
        android:id="@+id/playing_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@anim/volume_play_gif" />

</RelativeLayout>