<resources>

    <!-- The attribute to set in your Application/Activity theme to reference your custom theme -->
    <attr name="ptrHeaderStyle" format="reference" />

    <declare-styleable name="PullToRefreshHeader">

        <!-- A drawable to use as the background of the Header View -->
        <attr name="ptrHeaderBackground" format="reference|color" />

        <!-- The height of the Header View -->
        <attr name="ptrHeaderHeight" format="reference|dimension" />

        <!-- The Text Appearance of the Header View's Title text -->
        <attr name="ptrHeaderTitleTextAppearance" format="reference" />

        <!-- The color that the Progress Bar should be tinted with -->
        <attr name="ptrProgressBarColor" format="reference|color" />

        <!-- Text to show to prompt the user is pull (or keep pulling) -->
        <attr name="ptrPullText" format="reference|string" />

        <!-- Text to show to tell the user that a refresh is currently in progress -->
        <attr name="ptrRefreshingText" format="reference|string" />

        <!-- Text to show to tell the user has scrolled enough to refresh -->
        <attr name="ptrReleaseText" format="reference|string" />
    </declare-styleable>
    <declare-styleable name="PagerSlidingTabStrip">
        <attr name="indicatorColor" format="color" />
        <attr name="underlineColor" format="color" />
        <attr name="dividerColor" format="color" />
        <attr name="indicatorHeight" format="dimension" />
        <attr name="underlineHeight" format="dimension" />
        <attr name="dividerPadding" format="dimension" />
        <attr name="tabPaddingLeftRight" format="dimension" />
        <attr name="scrollOffset" format="dimension" />
        <attr name="tabBackground" format="reference" />
        <attr name="shouldExpand" format="boolean" />
        <attr name="textAllCaps" format="boolean" />
    </declare-styleable>

    <!-- Record 录音控件 -->
    <declare-styleable name="Play">
        <attr name="p_shownormalbg" format="boolean" />
        <!-- 是否显示放音背景 -->
    </declare-styleable>

    <!-- AudioButton 论坛音频播放按钮 -->
    <declare-styleable name="AudioButton">
        <attr name="ab_scalable" format="boolean" />
        <!-- 是否根据播放时间伸缩 -->
    </declare-styleable>

    <!-- 输入套件 -->
    <declare-styleable name="InputSuit">
        <attr name="is_attach" format="boolean" />
        <!-- 是否只显示附件 -->
    </declare-styleable>
    <!-- 九宫格锁屏 -->
    <declare-styleable name="NineLockView">

        <!--
             Aspect to use when drawing LockPatternView. Choices are "square"(default), "lock_width"
             or "lock_height"
        -->
        <attr name="aspect" format="string" />
    </declare-styleable>
    <declare-styleable name="CircularProgressBar">
        <attr name="borderWidth" format="dimension" />
    </declare-styleable>

    <!-- RoundCorner控件 -->
    <declare-styleable name="RoundCorner">
        <attr name="corner" format="integer" /> <!-- corner圆角方案  -1没有圆角； 0 全部; 1 TOP; 2 LEFT; 3 RIGHT; 4 BOTTOM -->
        <attr name="round" format="dimension" /> <!-- round 圆角弧度 -->
        <attr name="centermode" format="boolean" /> <!-- 是否使用居中模式 -->
    </declare-styleable>

    <!-- 圆角imageview -->
    <declare-styleable name="RoundImage">
        <attr name="rv_radius" format="dimension" /> <!-- 圆角弧度 -->
        <attr name="rv_circle" format="boolean" /> <!-- 是否是圆形 -->
    </declare-styleable>
    <!-- RoundProgressBar 环形进度条控件 -->
    <declare-styleable name="RoundProgressBar">
        <attr name="maxProgress" format="integer" />
        <attr name="rb_defaultvalue" format="integer" /> <!-- 默认值 -->
        <attr name="fill" format="boolean" /> <!-- 是否填充圆形区域 -->
        <attr name="paint_width" format="dimension" /> <!-- 画笔宽度，填充模式下无效，会被重置为0 -->
        <attr name="paint_color" format="color" /> <!-- 画笔颜色 -->
        <attr name="show_bottom" format="boolean" /> <!-- 是否显示底色 -->
        <attr name="inside_interval" format="integer" /> <!-- 圆形区域向里缩进的距离 -->
        <attr name="bottom_color" format="color" /> <!-- 背景色 -->
    </declare-styleable>
    <!-- ProgressWheel -->
    <declare-styleable name="ProgressWheel">
        <attr name="text" format="string" />
        <attr name="textColor" format="color" />
        <attr name="textSize" format="dimension" />
        <attr name="barColor" format="color" />
        <attr name="rimColor" format="color" />
        <attr name="rimWidth" format="dimension" />
        <attr name="spinSpeed" format="dimension" />
        <attr name="delayMillis" format="integer" />
        <attr name="circleColor" format="color" />
        <attr name="radius" format="dimension" />
        <attr name="barWidth" format="dimension" />
        <attr name="barLength" format="dimension" />
        <attr name="contourColor" format="color" />
        <attr name="contourSize" format="dimension" />
    </declare-styleable>

</resources>